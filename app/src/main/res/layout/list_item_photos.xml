<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:id="@+id/rtlParent"
        android:layout_width="match_parent"
        android:layout_height="250dp">


        <RelativeLayout
            android:id="@+id/rtlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.example.demo.photos.views.RoundedImageView
                android:id="@+id/imgThumb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imgThumb"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAlbumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:singleLine="true"
                    android:text="Amazon" />

                <TextView
                    android:id="@+id/txtPhotoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text="Amazon" />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/rtlTop"
            android:background="@android:color/white"
            android:scaleType="centerInside" />

    </RelativeLayout>
</android.support.v7.widget.CardView>